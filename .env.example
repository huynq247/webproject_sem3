# Cấu hình môi trường cho LMS Microservices
# Điều chỉnh các giá trị này theo môi trường triển khai của bạn

# Cấu hình Server
SERVER_HOST=your_server_ip_here
SERVER_PORT=80

# API Gateway (port nội bộ)
API_GATEWAY_PORT=8000
API_GATEWAY_URL=http://${SERVER_HOST}:${SERVER_PORT}

# Cấu hình Database
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=25432
POSTGRES_DB=postgres
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# MongoDB
MONGODB_HOST=your_mongodb_host
MONGODB_PORT=27017
MONGODB_USER=your_username
MONGODB_PASSWORD=your_password
MONGODB_DB=content_db
MONGODB_URL=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${MONGODB_DB}?authSource=admin

# Ports cho Frontend
FRONTEND_ADMIN_PORT=3001
FRONTEND_TEACHER_PORT=3002
FRONTEND_STUDENT_PORT=3003

# Các cổng dịch vụ nội bộ
AUTH_SERVICE_PORT=8001
CONTENT_SERVICE_PORT=8002
ASSIGNMENT_SERVICE_PORT=8004

# Khóa bảo mật
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256